<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Para todos los sitios web -->

    <!-- Vista para la página /customers -->
    <template id="view_customers_page" name="Customers Page">
        <t t-call="website.layout">
            <div class="container mt-5">
                <h1>Clientes</h1>
                <table class="table table-striped mt-3">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th>Teléfono</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="customers" t-as="customer">
                            <tr>
                                <td>
                                    <t t-esc="customer.name"/>
                                </td>
                                <td>
                                    <t t-esc="customer.email or ''"/>
                                </td>
                                <td>
                                    <t t-esc="customer.phone or ''"/>
                                </td>
                                <td>
                                    <t t-if="customer.is_profile_complete">
                                        <span style="color:green; font-weight:bold;">Completo</span>
                                    </t>
                                    <t t-else="">
                                        <span style="color:red; font-weight:bold;">Incompleto</span>
                                    </t>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>


    <record id="customers_page" model="website.page">
        <field name="url">/customers</field>
        <field name="is_published">True</field>
        <field name="view_id" ref="view_customers_page"/>
        <field name="cache_time">0</field>
        <field name="track">True</field>
    </record>

    <record id="menu_contactusss" model="website.menu">
        <field name="name">Clientes</field>
        <field name="url">/customers</field>
        <field name="page_id" ref="crm_social_profile_full.customers_page"/>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">12</field>
    </record>

</odoo>
